<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="CustomActivityIndicator.IndicatorPage">
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  BackgroundColor="#90000000">

            <Grid HorizontalOptions="Center" VerticalOptions="Center"  IsVisible="{Binding IsVisible1}">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                 <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="Icon120.png" HeightRequest="100" WidthRequest="100"></Image>
                <Label Grid.Row="1" Text="Loading please wait..."/>
          </Grid>

          
        <Grid HorizontalOptions="Center" VerticalOptions="Center"  IsVisible="{Binding IsVisible2}">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                 <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="Icon120.png" HeightRequest="100" WidthRequest="100"></Image>
                <Label Grid.Row="1" Text="Diaplaying the grid 2...."/>
          </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>
